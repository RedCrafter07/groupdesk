{
  "name": "groupdesk",
  "version": "1.0.4",
  "description": "GroupDesk is an app by RedCrafter07 which allows you to add fields and simplify your workflow.",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "rebuild": "./node_modules/.bin/electron-rebuild",
    "build": "electron-packager . GroupDesk --platform=win32 --arch=x64 --overwrite --icon=assets/icons/win/icon.ico",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "RedCrafter07",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "connect-flash": "^0.1.1",
    "ejs": "^3.1.6",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "moment": "^2.29.1",
    "node-json-db": "^1.3.0",
    "path": "^0.12.7"
  },
  "productName": "GroupDesk",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.59",
    "@electron-forge/maker-deb": "^6.0.0-beta.59",
    "@electron-forge/maker-rpm": "^6.0.0-beta.59",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.59",
    "@electron-forge/maker-zip": "^6.0.0-beta.59",
    "electron": "^11.2.2",
    "electron-rebuild": "^2.3.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "groupdesk",
            "loadingGif": "./loading.gif",
            "icon": "./icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
